                                <i class="fas fa-user"></i> {{ app.user.email }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li><a class="dropdown-item" href="{{ path('user_profile', {'id': app.user.id}) }}"><i class="fas fa-user-circle"></i> Mon Profil</a></li>
                                <li><a class="dropdown-item" href="{{ path('post_new') }}"><i class="fas fa-pen"></i> Nouveau Post</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
