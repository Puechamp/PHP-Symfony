                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('post_new') }}">
                                <i class="fas fa-pen"></i> Nouveau Post
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_index') }}">
                                <i class="fas fa-users"></i> Communaut√©
