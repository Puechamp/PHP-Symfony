                                    </form>
                                </li>
                            </ul>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('auth_login') }}">
                                <i class="fas fa-sign-in-alt"></i> Connexion
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main>
            <div class="container-lg mt-3">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        {% set bsClass = label == 'error' ? 'danger' : label %}
                        <div class="alert alert-{{ bsClass }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer>
            <div class="container-lg">
                <div class="row mb-4">
                    <div class="col-md-4 mb-4">
                        <h5><i class="fas fa-comments"></i> ForumHub</h5>
                        <p>Un espace de partage et de discussion pour tous les d√©veloppeurs passionn√©s par le PHP et Symfony.</p>
                    </div>
